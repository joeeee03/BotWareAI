{
  "name": "whatsapp-backend",
  "version": "1.0.0",
  "description": "WhatsApp-like chat backend with Node.js, Express, Socket.IO, and PostgreSQL",
  "main": "server.ts",
  "type": "module",
  "scripts": {
    "dev": "tsx watch server.ts",
    "start": "tsx server.ts",
    "build": "tsc --skipLibCheck",
    "seed": "tsx ../scripts/run-seed.ts",
    "reset-db": "tsx ../scripts/reset-db.ts"
  },
  "dependencies": {
    "axios": "^1.6.7",
    "bcrypt": "^5.1.1",
    "cors": "^2.8.5",
    "dotenv": "^16.6.1",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.2",
    "pg": "^8.16.3",
    "socket.io": "^4.6.1"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^20.11.5",
    "@types/pg": "^8.15.6",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  }
}
